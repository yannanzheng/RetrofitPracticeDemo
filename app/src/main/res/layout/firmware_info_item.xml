<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp">

        <TextView
            android:id="@+id/device_model_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#383838"
            android:textStyle="bold"
            android:text="Wunder360 S1" />

        <TextView
            android:id="@+id/device_connect_state_tv"
            android:layout_alignParentRight="true"
            android:layout_marginRight="22dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#05b27e"
            android:textSize="12sp"
            android:text="设备已连接" />
        <TextView
            android:id="@+id/version"
            android:layout_below="@id/device_model_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#383838"
            android:textSize="13sp"
            android:textStyle="bold"
            android:text="V2.1.1.4" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="新特性"
        android:textStyle="bold"
        android:textSize="13sp"
        android:textColor="#383838"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/cycle_dot_blue"
        android:drawablePadding="6dp"
        android:text="增加美颜功能"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/cycle_dot_blue"
        android:drawablePadding="6dp"
        android:text="增加美颜功能"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/cycle_dot_blue"
        android:drawablePadding="6dp"
        android:text="增加美颜功能"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:textSize="12sp"
        android:textColor="#5abbff"
        android:text="更多" />

    <TextView
        android:id="@+id/download_firmware"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_13"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/confirm_bg"
        android:paddingBottom="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_58"
        android:paddingStart="@dimen/dp_58"
        android:paddingTop="@dimen/dp_15"
        android:text="开始下载"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/sp_14" />

</LinearLayout>
